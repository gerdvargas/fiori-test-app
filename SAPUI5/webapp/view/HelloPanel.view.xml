<mvc:View controllerName="DTT.SAPUI5.controller.HelloPanel" 
xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns:core="sap.ui.core">
    <Panel id="_IDGenPanel2" 
            headerText = "{i18n>helloPanel}" 
            class="sapUiResponsiveMargin" 
            width="auto"
            expandable="{device>/system/phone}"
            expanded="{= !${device>/system/phone}}"
            >
        <content>
            <Button id="_IDGenButton2" 
                    text="{i18n>helloDialogButton}" 
                    press=".onOpenDialog" 
                    class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop" 
                    icon="sap-icon://action">
            </Button>
            <Button id="_IDGenButton1" 
                    text="{i18n>showHelloButtonText}" 
                    press=".onShowHello" 
                    class="sapUiSmallMarginEnd sapUiHideOnDesktop">
            </Button>
            <Input id="_IDGenInput1" value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%">    
            </Input>
            <Text id="_IDGenText1" 
                text="Live Input: {/recipient/name}" 
                class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="DTT.SAPUI5.view.Form01" type="XML">
    </core:Fragment>
</mvc:View>